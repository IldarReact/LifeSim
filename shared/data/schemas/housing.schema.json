{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "name", "type", "price", "costPerQuarter"],
    "properties": {
      "id": {
        "type": "string",
        "description": "Unique housing identifier"
      },
      "name": {
        "type": "string",
        "description": "Display name"
      },
      "description": {
        "type": "string"
      },
      "type": {
        "type": "string",
        "enum": ["rent_room", "rent_apartment", "mortgage", "own_house", "premium"]
      },
      "price": {
        "type": "number",
        "minimum": 0,
        "description": "One-time purchase price"
      },
      "costPerQuarter": {
        "type": "number",
        "minimum": 0,
        "description": "Quarterly cost (rent/mortgage)"
      },
      "effects": {
        "type": "object",
        "properties": {
          "happiness": { "type": "number" },
          "sanity": { "type": "number" },
          "health": { "type": "number" }
        }
      },
      "minMoney": {
        "type": "number",
        "minimum": 0
      },
      "minSalary": {
        "type": "number",
        "minimum": 0
      },
      "capacity": {
        "type": "integer",
        "minimum": 1,
        "description": "Max family members"
      },
      "maintenanceCost": {
        "type": "number",
        "minimum": 0
      }
    }
  }
}
