{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "id",
    "name",
    "description",
    "price",
    "category"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z_]+$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "price": {
      "type": "number",
      "minimum": 0
    },
    "category": {
      "type": "string",
      "enum": [
        "food",
        "health",
        "services",
        "housing",
        "transport",
        "education",
        "entertainment"
      ]
    },
    "effects": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "money": {
          "type": "number"
        },
        "happiness": {
          "type": "number"
        },
        "energy": {
          "type": "number"
        },
        "health": {
          "type": "number"
        },
        "sanity": {
          "type": "number"
        },
        "intelligence": {
          "type": "number"
        }
      }
    },
    "isRecurring": {
      "type": "boolean"
    },
    "costPerTurn": {
      "type": "number",
      "minimum": 0
    },
    "assetType": {
      "type": "string",
      "enum": [
        "stock",
        "housing",
        "crypto",
        "bond"
      ]
    }
  }
}